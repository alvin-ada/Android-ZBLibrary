<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page" >

    <ScrollView
        style="@style/ll_vertical_match_match"
        android:layout_weight="1" >

        <LinearLayout style="@style/ll_vertical_match_match">

            <ImageView
                android:id="@+id/ivSettingHead"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="@dimen/item_distance"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_person_head" />

            <View
                style="@style/divider_horizontal_1px"
                android:layout_marginTop="30dp" />

            <RelativeLayout
                android:id="@+id/llPersonName"
                style="@style/content_item_white">

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    style="@style/content_item_lf_tv"
                    android:textColor="@color/setting_item_font"
                    android:text="昵称" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    style="@style/content_item_rt_tv"
                    android:text="三石兄"
                    android:layout_toLeftOf="@+id/ivNameChg"
                    android:textColor="@color/setting_item_gray" />

                <ImageView
                    android:id="@+id/ivNameChg"
                    style="@style/content_item_rt_img"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout
                android:id="@+id/llPersonPhone"
                style="@style/content_item_white">

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    style="@style/content_item_lf_tv"
                    android:text="手机号"
                    android:textColor="@color/setting_item_font" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    style="@style/content_item_rt_tv"
                    android:text="15021462998"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/setting_item_gray" />
            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout
                android:id="@+id/llPersonProofs"
                style="@style/content_item_white">

                <TextView
                    style="@style/content_item_lf_tv"
                    android:layout_weight="1"
                    android:text="历史验证" />

                <ImageView style="@style/content_item_rt_img" />
            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>